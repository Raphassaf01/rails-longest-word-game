<div class="container m-5 text-center">
  <h1 class="mb-3">New game</h1>
  <% @display_grid.each do |letter| %>
  <div class="btn btn-primary mb-3">
    <%= letter %>
  </div>
  <% end %>
  <p>What is the longest word you can find?</p>
  <form action="/score" data-turbo="false" method="post" class="d-inline-flex">
    <input type="text" name="answer">
    <input type="submit" value="Play" class="btn btn-primary">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <input id="token" name="letters" type="hidden" value="<%= @display_grid %>" />
  </form>
</div>
